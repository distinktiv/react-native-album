{
  "parser": "babel-eslint",
  "plugins": [
    "react-native",
    "react"
  ],
  "ecmaFeatures": {
    "jsx": true,
    "destructuring": true,
    "arrowFunctions": true,
    "classes": true,
    "objectLiteralShorthandMethods": true,
    "spread": true
  },
  "rules": {
    "react-native/no-unused-styles": 2,
    "react-native/split-platform-components": 2,
    "react-native/no-inline-styles": 2,
    "react-native/no-color-literals": 2,
  },
  "env": {
    "node": true
  },
  "globals": {
    "fetch": true
  }
}
